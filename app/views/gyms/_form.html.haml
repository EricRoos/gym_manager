= form_for @gym do |f|
  - if @gym.errors.any?
    #error_explanation
      %h2= "#{pluralize(@gym.errors.count, "error")} prohibited this gym from being saved:"
      %ul
        - @gym.errors.full_messages.each do |msg|
          %li= msg
  .row
    .small-6.small-centered.columns
      = f.label "Gym Name"
      = f.text_field :name, :placeholder => "Name", :autofocus => true
  .row
    .small-6.small-centered.columns
      = f.submit 'Save', :class => "button expand"
