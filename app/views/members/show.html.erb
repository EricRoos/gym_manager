<div class="row">
 
<div class="large-4 small-12 columns">
<img src="http://placehold.it/500x500">
<div class="hide-for-small panel">
<h3><%= @member.name %></h3>
<h5 class="subheader">
</h5>
</div>
<div class="panel callout radius">
<h6>
  Member of <%= @member.gym.name %>
</h6>
</div></div> 
 
<div class="large-8 columns">
  <div class="row">
  <% transaction_list = @member.transactions %>
  <% transaction_list = transaction_list.to_a.prepend Transaction.new %>
  <% transaction_list.each do |transaction| %>
    <% is_real = transaction.id.present? %>
    <div class="large-4 small-6 columns">
      <% if is_real %>
        <%= image_tag "http://placehold.it/250x250&text=#{transaction.workouts_used}/#{transaction.workouts}" %>
      <% else %>
        <%= link_to (image_tag "http://placehold.it/250x250&text=New%20Transaction"), new_gym_member_transaction_path(@member.gym,@member) %>
      <% end %>
      <div class="panel">
        <% if is_real %>
          <h5>Balance: $<%= transaction.try(&:balance) %></h5>
          <ul class="small-block-grid-3">
            <li class="text-center"> <%= link_to (fa_stacked_icon "plus", base: "square-o"), new_gym_member_transaction_path(@member.gym,@member) %> </li>
            <li class="text-center"> <%= fa_icon "fw" %> </li>
            <li class="text-center"> <%= fa_icon "fw" %> </li>
          </ul>
        <% else %>
          <h5>Add</h5>
          <ul class="small-block-grid-3">
            <li class="text-center"> <%= link_to (fa_stacked_icon "plus", base: "square-o"), new_gym_member_transaction_path(@member.gym,@member) %> </li>
            <li class="text-center"> <%= fa_icon "fw" %> </li>
            <li class="text-center"> <%= fa_icon "fw" %> </li>
          </ul>
        <% end %>
      </div>
    </div>
  <% end %>
  </div>
</div> 
 
