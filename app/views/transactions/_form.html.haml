= form_for @transaction, :url => gym_member_transactions_path(@gym,@member) do |f|
  - if @transaction.errors.any?
    #error_explanation
      %h2= "#{pluralize(@transaction.errors.count, "error")} prohibited this transaction from being saved:"
      %ul
        - @transaction.errors.full_messages.each do |msg|
          %li= msg

  .row
    .small-6.small-centered.columns.text-center
      = f.hidden_field :member_id, :value => @member.id
  .row
    .small-6.small-centered.columns.text-center
      = f.label :rate
      = f.text_field :rate, :placeholder => :rate
  .row
    .small-6.small-centered.columns.text-center
      = f.label :workouts
      = f.number_field :workouts, :placeholder => :workouts
  .row
    .small-6.small-centered.columns.text-center
      = f.submit 'Save', :class => "button expand"
